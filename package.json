{
  "name": "craftale",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:ci": "next lint --quiet || exit 0",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "lint:complexity": "next lint",
    "lint:files": "next lint --ext .ts,.tsx,.js,.jsx src/",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint:strict",
    "validate:ci": "npm run type-check && npm run lint:ci",
    "analyze:files": "find src -name '*.tsx' -o -name '*.ts' | xargs wc -l | sort -nr",
    "analyze:complexity": "npm run lint 2>&1 | grep -E '(complexity|max-lines|max-params)' || true",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "verify:pricing": "npx tsx scripts/verify-pricing-setup.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdolzi/web4.git"
  },
  "keywords": [
    "web-agency",
    "nextjs",
    "tailwind",
    "typescript",
    "cost-optimization",
    "resource-management"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rdolzi/web4/issues"
  },
  "homepage": "https://github.com/rdolzi/web4#readme",
  "description": "Modern conversion-focused web agency website built with Next.js, TypeScript, and Tailwind CSS with cost optimization",
  "browserslist": [
    ">0.5%",
    "last 2 versions",
    "not dead",
    "ios_saf >= 15",
    "safari >= 15"
  ],
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.515.0",
    "next": "15.4.6",
    "prom-client": "^15.1.3",
    "radix-ui": "^1.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-image-crop": "^11.0.10",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.4.6",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.0.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "undici": "^7.11.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
